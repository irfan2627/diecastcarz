<%- include("../layouts/admin_layouts/admin_header.ejs") -%>

    <div class="screen-overlay"></div>

    <%- include("../layouts/admin_layouts/admin_asidenav.ejs") -%>

        <main class="main-wrap">

            <%- include("../layouts/admin_layouts/admin_topnav.ejs") -%>

                <section class="content-main">
                    <div class="content-header">
                        <div>
                            <h2 class="content-title card-title">Category Offers</h2>
                            <p>Add / Edit Category offers</p>
                        </div>

                    </div>
                    <div class="card mb-4">

                        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-3">
                            <% if(categoriesData && categoriesData.length> 0 ) { %>
                                <% for(let i=0; i < categoriesData.length; i++) { %>
                                    <div class="col">
                                        <div class="card card-user">
                                            <div class="card-header">
                                                <img class="img-md img-avatar"
                                                src="/<%= categoriesData[i].categoryImages %>" alt="User pic">
                                            </div>
                                            <div class="card-body">
                                                <h5 class="card-title mt-50">
                                                    <%= categoriesData[i].categoryName %>
                                                </h5>
                                                <div class="card-text text-muted">
                                                    <p class="m-0">Offer Status:
                                                        <% if (categoriesData[i].isCategoryOfferActive===true) { %>
                                                            <span class="badge rounded-pill alert-success">Active</span>
                                                            <br>
                                                            <a style="background-color: #084c4733; color: rgb(0, 0, 0); margin: 10px;"
                                                                class="btn"
                                                                href="admin_add_category_offer_page?_id=<%= categoriesData[i]._id %>">EDIT
                                                                OFFERS</a>
                                                            <% } else { %>
                                                                <span
                                                                    class="badge rounded-pill alert-danger">Inactive</span>
                                                                <br>
                                                                <a style="background-color: #084c4733; color: rgb(0, 0, 0); margin: 10px;"
                                                                    class="btn"
                                                                    href="admin_add_category_offer_page?_id=<%= categoriesData[i]._id %>">ADD
                                                                    OFFERS</a>
                                                                <% } %>

                                                    </p>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                                        <% } %>

                        </div>
                    </div>
                </section>

                <%- include("../layouts/admin_layouts/admin_footer.ejs") -%>